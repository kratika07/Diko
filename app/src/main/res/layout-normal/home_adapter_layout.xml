<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:elevation="4dp">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">

            <ImageView
                android:id="@+id/image"
                android:layout_margin="@dimen/size_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textViewDesc"
                android:background="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image"
                android:text="Your Heading"
                android:textAppearance="?android:textAppearanceLarge" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_toRightOf="@+id/image"
                android:text="Lorem ipsum gfjkjjlkgjlgjljgfljfldolor sit amet, consectetur adipiscing elit. Morbi molestie nisi dui. "
                android:textAppearance="?android:textAppearanceMedium" />

            <TextView
                android:id="@+id/dots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="&#8942;"
                android:textAppearance="?android:textAppearanceLarge" />


            <TextView
                android:id="@+id/formate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:textSize="10sp"
                android:text="Formate:"
                android:textStyle="bold"
                android:textAppearance="?android:textAppearanceMedium" />

            <TextView
                android:id="@+id/document"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/formate"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="120dp"
                android:text="Doc,Edited Last Week"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/document"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="120dp"
                android:text="Date:"
                android:textStyle="bold"
                android:textSize="10sp" />



            <TextView
                android:id="@+id/actualdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/document"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="120dp"
                android:text="1/7/2019,"
                android:textSize="10sp" />


            <TextView
                android:id="@+id/uploadby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/document"
                android:layout_marginLeft="195dp"
                android:textStyle="bold"
                android:layout_marginTop="120dp"
                android:text="Uploaded By:"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/document"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="255dp"
                android:layout_alignParentRight="true"
                android:text=" User"
                android:textSize="10sp" />


        </RelativeLayout>





    </android.support.v7.widget.CardView>

</LinearLayout>