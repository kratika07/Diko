<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/size_30"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/size_150dp"
                android:layout_height="@dimen/size_150dp"
                android:id="@+id/toolBarPicture"
                android:layout_gravity="center"

                android:background="@drawable/icondownloadcloud"
                />
            <TextView
                android:layout_width="match_parent"
                android:text="@string/formatesupport"
                android:textSize="@dimen/size_15"
                android:textColor="@color/Black"
                android:textAlignment="center"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:text="@string/supportfile"
                android:textSize="@dimen/size_10"
                android:layout_marginTop="@dimen/size_10"
                android:textAlignment="center"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:text="@string/pleaseuploadsuprtformat"
                android:textSize="@dimen/size_15"
                android:layout_marginTop="@dimen/size_10"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:layout_height="wrap_content" />

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:hint="Add Keywords"
                android:layout_marginTop="@dimen/size_20"
                android:drawableRight="@drawable/keyboard"
                android:layout_height="wrap_content"
                />
            <Button
                android:layout_width="match_parent"
                android:text="@string/uploaddocument"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/size_20"
                android:background="@color/colorPrimary"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>

